@model ImageApp.Bussiness.Dto.CategoryEditDto
@{
    ViewData["Title"] = "Kategori Düzenle";
}
<div class="col-xl-10 col-sm-12 mx-auto ">
    <h3 class="text-center mb-4">Kategori Düzenle</h3>
    <form action="/Category/EditCategory" method="post">
        @*gizli fieldlar başlangıç*@
        <input hidden type="text" name="Id" value="@Model.Category.Id" />
        <input hidden type="text" name="CreateUser" value="@Model.Category.CreateUser" />
        <input hidden type="text" name="CreateDate" value="@Model.Category.CreateDate" />
        @*gizli fieldlar bitiş*@
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Adı</label>
            <div class="col-sm-10">
                <input type="text" name="CategoryName" class="form-control" id="inputEmail3" required placeholder="" value="@Model.Category.CategoryName">
            </div>
        </div>

        <div id="parentCategory" class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Üst Kategori</label>
            <div class="col-sm-10">
                <select id="inputState" name="ParentCategory" class="form-control">
                    <option value="0">Lüften seçiniz</option>
                    @foreach (var category in Model.CategoryList)
                    {
                        if (Model.Category.ParentCategory == category.Id)
                        {
                            <option selected value="@category.Id">@category.CategoryName</option>
                        }
                        else
                        {
                            <option value="@category.Id">@category.CategoryName</option>
                        }
                    }
                </select>
            </div>
        </div>
        <fieldset class="form-group">
            <div class="row">
                <legend class="col-form-label col-sm-2 pt-0">Kategori Tipi</legend>
                <div class="col-sm-10">
                    <div class="row container">
                        @if (Model.Category.CategoryType == 0)
                        {

                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="CategoryType" id="gridRadios1" value="0" checked>
                                <label class="form-check-label" for="gridRadios1">
                                    Ana Kategori
                                </label>
                            </div>
                            <div class="form-check ml-2">
                                <input class="form-check-input" type="radio" name="CategoryType" id="gridRadios2" value="1">
                                <label class="form-check-label" for="gridRadios2">
                                    Alt Kategori
                                </label>
                            </div>
                        }
                        else
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="CategoryType" id="gridRadios1" value="0">
                                <label class="form-check-label" for="gridRadios1">
                                    Ana Kategori
                                </label>
                            </div>
                            <div class="form-check ml-2">
                                <input class="form-check-input" type="radio" name="CategoryType" id="gridRadios2" value="1" checked>
                                <label class="form-check-label" for="gridRadios2">
                                    Alt Kategori
                                </label>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </fieldset>
        @*<div class="form-group row">
                <div class="col-sm-2">Aktif</div>
                <div class="col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck1">
                        <label class="form-check-label" for="gridCheck1">

                        </label>
                    </div>
                </div>
            </div>*@
        <div class="form-group row ">
            <div class="col-sm-12 mt-4">
                <a href="@Url.Action("Index", "Category")">Listeye Geri Dön</a>
                <button type="submit" class="btn btn-primary float-right">Kaydet</button>
                <button type="reset" class="btn btn-light float-right mr-2">Temizle</button>
            </div>
        </div>
    </form>
</div>